<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#66CCFF">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginBottom="10sp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/Record" />
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:background="#000033">

		<Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginLeft="60sp"
			android:layout_marginRight="20sp"
			android:background="#33FF33"
            android:textSize="20sp"
            android:text="Start" />

		<Button
	        android:id="@+id/btnStop"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:background="#FF1100"
	        android:textSize="20sp"
	        android:text="Stop" />

		<Button
	        android:id="@+id/btnExit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_marginLeft="20sp"
	        android:textSize="20sp"
	        android:text="@string/btnExit" />

	</LinearLayout>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

			<TextView
				android:id="@+id/viewScanNum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="60sp"
				android:textSize="20sp"
				android:text="Scan Number:"/>
			<EditText
				android:id="@+id/editScanNum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="5"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@+id/viewScanNum" />

			<TextView
				android:id="@+id/viewDelayNum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="Delay:"
				android:layout_alignLeft="@+id/viewScanNum"
				android:layout_below="@+id/viewScanNum" />
			<EditText
				android:id="@+id/editDelayNum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="5"
				android:layout_toRightOf="@+id/viewDelayNum"
				android:layout_alignTop="@+id/viewDelayNum" />

	</RelativeLayout>

	<ProgressBar
		android:id="@+id/scanPb"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		style="?android:attr/progressBarStyleHorizontal"/>

	<TextView
		android:id="@+id/ScanProgress"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:text="扫描进度: 0/0"/>
	<TextView
		android:id="@+id/wifiData"
		android:layout_width="fill_parent"
		android:layout_height="200dp"
		android:layout_marginTop="10sp"
		android:textSize="16sp"
		android:text="WifiData"/>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/btnSaveDefault"
			android:text="保存wifi分布"/>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/btnReadDefault"
			android:text="读取wifi分布"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="分布文件名"/>
		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/edtBase"
			android:text="系馆"/>
	</LinearLayout>

</LinearLayout>
