<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#FFFFFF">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginBottom="10sp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/Record" />
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="40sp"
        android:background="#DCDCDC">

		<Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
			android:layout_marginLeft="60sp"
			android:background="#33FF33"
            android:textSize="20sp"
            android:text=" Start " />

		<Button
	        android:id="@+id/btnStop"
	        android:layout_width="wrap_content"
	        android:layout_height="40sp"
            android:layout_marginLeft="40sp"
			android:background="#FF1100"
	        android:textSize="20sp"
	        android:text=" Stop " />

		<Button
	        android:id="@+id/btnExit"
	        android:layout_width="wrap_content"
	        android:layout_height="40sp"
			android:layout_marginLeft="40sp"
            android:background="#FFF8DC"
	        android:textSize="20sp"
	        android:text="  Exit  " />

	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10sp"
        android:background="#D3D3D3">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10sp"
			android:text="扫描数:"/>
		<EditText
			android:id="@+id/editScanNum"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="10" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20sp"
			android:text="扫描间隔:" />
		<EditText
			android:id="@+id/editDelayNum"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="4" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20sp"
			android:text="位置ID:" />
		<EditText
			android:id="@+id/edtLocId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="1" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:background="#D3D3D3">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
			android:text="WiFi扫描保存文件名："/>
		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Wifi9003F2W"
			android:id="@+id/edtSaveFile"/>
	</LinearLayout>

	<ProgressBar
		android:id="@+id/scanPb"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		style="?android:attr/progressBarStyleHorizontal"/>

	<TextView
		android:id="@+id/ScanProgress"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="16sp"
        android:background="#A3A3A3"
		android:text="扫描进度: 0/0"/>
	<TextView
		android:id="@+id/wifiData"
		android:layout_width="fill_parent"
		android:layout_height="150dp"
		android:layout_marginTop="10sp"
		android:textSize="16sp"
		android:text="WifiData"/>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/btnSaveDefault"
			android:text="保存wifi分布"/>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/btnReadDefault"
			android:text="读取wifi分布"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:background="#D3D3D3">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="分布文件名"/>
		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/edtBase"
			android:text="Base9003F2W"/>
	</LinearLayout>

</LinearLayout>
